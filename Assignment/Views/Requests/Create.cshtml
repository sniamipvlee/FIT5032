@model Assignment.Models.Requests

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>
<link href="~/Content/DatePicker/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.3.1.min.js"></script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Your requests will be sent to restaurant owner by email</h4>
        <h4 id="hintMsg">Please select your date</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker", @autocomplete = "off", @id="dateForm" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" id="requestbtn"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", "Restaurants")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    $("#requestbtn").click(function() {
        alert("Your request is sent to owner by email");
    });

    $(function () {
        $(".datepicker").datepicker(
            option = {
                minDate: new Date(),
                showAnim: "fadeIn",
                onSelect: function (dateText, inst) {
                    var seats = @ViewBag.totalSeat;
                    var nameList = @Html.Raw(Json.Encode(ViewBag.requestNameList));
                    var countList = @Html.Raw(Json.Encode(ViewBag.requestCountList));

                    for (var i = 0; i < nameList.length; i++) {
                        var date = nameList[i].split(" ")[0].split("/");
                        var dateToString = date[1] + "/" + date[2] + "/" + date[0];
                        if (dateToString == dateText) {
                            seats = seats - countList[i];
                            break;
                        }
                    }

                    if (seats > 0) {
                        $("#hintMsg").html("There are " + seats + " seats remaining");
                        $("#requestbtn").attr("disabled",false);
                    }
                    else {
                        $("#hintMsg").html("There is no seat left at that time");
                        $("#requestbtn").attr("disabled",true);
                    }
                }
            }
        );
    });
</script>