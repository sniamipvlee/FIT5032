@model IEnumerable<Assignment.Models.Restaurants>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Restaurants</h2>

@section Scripts {
    @Scripts.Render("~/Scripts/DataTables/jquery.dataTables.js")
    @Scripts.Render("~/Scripts/DataTables/dataTables.bootstrap.js")
    <script>
        $(document).ready(function () {
            $('.RestaurantTable').DataTable();
        });
    </script>
}
<link href="~/Content/DataTables/css/dataTables.bootstrap.min.css"
      rel="stylesheet" />

<table class="RestaurantTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-md-4">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="col-md-4">
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td class="col-md-4">
                    @*Html.DisplayFor(modelItem => item.Description)*@
                    @Html.Raw(item.Description)
                </td>
                <td class="col-md-4">
                    @Html.ActionLink("View", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Request", "Create", "Requests", new { restaurantId = item.Id }, null)
                </td>
            </tr>
        }
    </tbody>
</table>
